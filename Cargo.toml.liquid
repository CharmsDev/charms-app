[package]
name = "{{project-name}}"
description = "A simple Charms app"
version = "0.1.0"
edition = "2021"
license = "MIT"

[dependencies]
charms-sdk = { version = "0.2.0" }
sha2 = { version = "0.10.8" }

[profile.release]
lto = "fat"
opt-level = "s"
strip = "symbols"

[patch.crates-io]
sha2 = { git = "https://github.com/sp1-patches/RustCrypto-hashes", package = "sha2", tag = "sha2-v0.10.8-patch-v1" }
